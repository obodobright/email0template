<mjml>
  <mj-head>
    <mj-title>Xtride</mj-title>
    <mj-font
      name="Inter"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Nunito:wght@800;900;1000&display=swap"
    />
  </mj-head>

  <mj-body>
    <mj-container background-color="#fff">
      <!-- #076E871A -->
      <mj-section background-color="#e6f0f3">
        <mj-column vertical-align="top" width="100%">
          <mj-image
